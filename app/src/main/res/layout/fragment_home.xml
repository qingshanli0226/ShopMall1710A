<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.example.shopmall.framework.view.MyToolBar
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/myToolBar"
            app:toolbarTile="@string/app_name"
            app:toolBarRightSrc="@drawable/personal"
            app:isShowTitle="true"
            />
    <ScrollView
            android:layout_below="@+id/myToolBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <include
                    android:id="@+id/titlebar"
                    layout="@layout/titlebar" />
            <ProgressBar
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/loadingBar"
                    android:layout_centerInParent="true"
                    android:visibility="gone"/>
            <com.youth.banner.Banner
                    android:layout_below="@id/titlebar"
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"/>
            <android.support.v7.widget.RecyclerView
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/banner"
                    android:id="@+id/rv_channel_info"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginLeft="30dp"
                    />
            <com.youth.banner.Banner
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/rv_channel_info"
                    android:id="@+id/banner_act_info"
                    android:layout_width="500dp"
                    android:layout_height="120dp"
                    android:layout_centerInParent="true"
                    />
            <android.support.v7.widget.RecyclerView
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/banner_act_info"
                    android:id="@+id/rv_seckill_info"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginLeft="15dp"
                    />
            <android.support.v7.widget.RecyclerView
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/rv_seckill_info"
                    android:id="@+id/rv_recommend_info"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_marginLeft="40dp"
                    />
            <android.support.v7.widget.RecyclerView
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/rv_recommend_info"
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    />
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>