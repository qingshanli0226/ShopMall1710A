<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.example.shopmall.framework.view.ToolBar
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/toolBar"
            app:toolbarTile="@string/main_title_proper"
            app:toolBarLeftSrc="@mipmap/cart"
            app:toolBarRightDisplay="true"
            app:toolBarRightSrc="@mipmap/ic_launcher"
            app:toolbarBackgroundColor="@color/colorAccent"
            app:isShowTitle="false"
    />

    <TextView android:layout_width="match_parent" android:layout_height="50dp"
    android:gravity="left|center_vertical"
    android:visibility="gone"
              android:textSize="@dimen/shop_car_text_size"
              android:textColor="@android:color/holo_red_dark"
              android:text="@string/connect_failed"
              android:layout_below="@+id/toolBar"
    android:id="@+id/connectFailedTv"/>


    <android.support.v7.widget.RecyclerView android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_below="@id/connectFailedTv"
                                            android:layout_marginTop="10dp"
    android:id="@+id/recyclerView">

    </android.support.v7.widget.RecyclerView>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="30sp"
              android:gravity="center"
              android:layout_centerInParent="true"
              android:id="@+id/count"
              android:text="@string/fragment_home_content"
    android:visibility="visible"/>

    <ProgressBar android:layout_width="100dp" android:layout_height="100dp"
                 android:id="@+id/loadingBar"
                 android:layout_centerInParent="true"
                 android:visibility="gone"/>


</RelativeLayout>