<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="vertical">

    <com.example.shopmall.framework.view.ToolBar
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/toolBar"
            app:toolbarTile="@string/message_detail"
            app:toolBarRightDisplay="true"
            app:toolBarRightSrc="@mipmap/icon_more"
            app:isShowTitle="true"
    />

    <android.support.v7.widget.RecyclerView
            android:id="@+id/shopmallMessageRV"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>


    <ProgressBar android:layout_width="100dp" android:layout_height="100dp"
                 android:id="@+id/loadingBar"
                 android:layout_centerInParent="true"
                 android:visibility="gone"/>
</LinearLayout>