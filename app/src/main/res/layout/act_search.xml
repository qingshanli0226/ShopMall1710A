<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">



    <LinearLayout
            android:background="#ed3f3f"
            android:orientation="horizontal"
            android:layout_width="match_parent" android:layout_height="wrap_content">

        <EditText
                android:id="@+id/act_search_search_edit"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/search_home_shape"
                android:drawableLeft="@drawable/home_search_icon"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:hint="输入搜索信息"
                android:textSize="13sp"/>

        <TextView
                android:id="@+id/act_search_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="搜索"
                android:padding="@dimen/margin_2"
                android:textColor="#fff"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/act_search_recycler_top"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="0dp">

    </androidx.recyclerview.widget.RecyclerView>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/act_search_recycler"
            android:layout_weight="5"
            android:layout_width="match_parent"
            android:layout_height="0dp">

    </androidx.recyclerview.widget.RecyclerView>


</LinearLayout>