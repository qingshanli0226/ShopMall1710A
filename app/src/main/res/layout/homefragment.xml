<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <com.example.shopmall.framework.view.ToorBar
            android:background="#FF0B0B"
            android:id="@+id/toor_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60">

    </com.example.shopmall.framework.view.ToorBar>
    <EditText
            android:layout_marginTop="@dimen/dp_15"
            android:id="@+id/edit_print"
            android:background="#fff"
            android:layout_marginLeft="@dimen/dp_5"
            android:hint="输入搜索信息"
            android:drawableLeft="@drawable/home_search_icon"
            android:layout_width="@dimen/dp_360"
            android:layout_height="@dimen/dp_30">

    </EditText>

    <android.support.v7.widget.RecyclerView
            android:layout_below="@id/toor_bar"
            android:id="@+id/re_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>
    <ProgressBar android:layout_width="@dimen/progress_bar" android:layout_height="@dimen/progress_bar"
            android:id="@+id/progressBar"
            android:layout_centerInParent="true"
            android:visibility="gone"/>
</RelativeLayout>