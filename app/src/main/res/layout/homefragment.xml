<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <com.example.shopmall.framework.view.ToorBar
            android:background="#FF0B0B"
            android:id="@+id/toor_bar"
            android:layout_width="match_parent"
            android:layout_height="60dp">

    </com.example.shopmall.framework.view.ToorBar>
    <EditText
            android:layout_marginTop="15dp"
            android:id="@+id/edit_print"
            android:background="#fff"
            android:layout_marginLeft="5dp"
            android:hint="输入搜索信息"
            android:drawableLeft="@drawable/home_search_icon"
            android:layout_width="360dp"
            android:layout_height="30dp">

    </EditText>

    <android.support.v7.widget.RecyclerView
            android:layout_below="@id/toor_bar"
            android:id="@+id/re_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>
    <ProgressBar android:layout_width="100dp" android:layout_height="100dp"
            android:id="@+id/progressBar"
            android:layout_centerInParent="true"
            android:visibility="gone"/>
</RelativeLayout>