<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        <LinearLayout
                android:layout_centerInParent="true"
                android:padding="1dp"
                android:background="@drawable/type_lin_bg"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/type_tv_type"
                    android:text="分类"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FFF"
                    android:background="@drawable/type_tv_left_bg"
                    android:gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="30dp"/>
            <TextView
                    android:id="@+id/type_tv_tag"
                    android:textColor="#F00"
                    android:text="标签"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="30dp"/>



        </LinearLayout>

        <ImageView
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/home_search_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>


    </RelativeLayout>

    <LinearLayout
            android:id="@+id/type_lin_type"
            android:orientation="horizontal"
            android:layout_weight="9"
            android:layout_width="match_parent"
            android:layout_height="0dp">


        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/frag_type_recyclerleft"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

        </androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent">


            <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView
                            android:text="热卖推荐"
                            android:layout_marginLeft="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/type_recyclertop"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"></androidx.recyclerview.widget.RecyclerView>

                    <TextView
                            android:text="常用分类"
                            android:layout_marginLeft="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/type_recyclerbot"
                            android:layout_width="match_parent"
                            android:layout_height="600dp"></androidx.recyclerview.widget.RecyclerView>


                </LinearLayout>
            </ScrollView>


        </LinearLayout>

    </LinearLayout>
    <LinearLayout
            android:id="@+id/type_lin_tag"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_weight="9"
            android:layout_height="0dp">

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/type_recycler_tag"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

        </androidx.recyclerview.widget.RecyclerView>


    </LinearLayout>


</LinearLayout>