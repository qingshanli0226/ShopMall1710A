<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.example.shopmall.framework.base.view.CustomToolBar
            android:id="@+id/act_det_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    </com.example.shopmall.framework.base.view.CustomToolBar>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eeee"/>

    <FrameLayout
            android:layout_marginTop="@dimen/margin_1"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#fff"
                        android:orientation="vertical">

                    <ImageView
                            android:id="@+id/act_det_iv_good_info_image"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_350"
                            android:layout_gravity="center_horizontal"/>

                    <TextView
                            android:id="@+id/act_det_tv_good_info_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_3"
                            android:text="【预售】《来年就交给你啦》珍藏画册 限量礼盒版"
                            android:textColor="#323427"/>

                    <TextView
                            android:id="@+id/act_det_tv_good_info_desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/margin_2"
                            android:text="预售截止10月15日，预售期为限量礼盒版，包括特制木盒x1、画集x1、邮票x1套、书签x1、贴纸x1、信封x1、礼盒特"
                            android:textColor="#767f86"/>

                    <TextView
                            android:id="@+id/act_det_tv_good_info_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/margin_2"
                            android:text="￥150.00"
                            android:textColor="#ed3f3f"
                            android:textSize="@dimen/ts_4"/>

                    <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/margin_2"
                            android:background="#eeee"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/margin_2">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="由"
                                android:textColor="#3c3d40"/>

                        <TextView
                                android:id="@+id/act_det_tv_good_info_store"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="尚硅谷"
                                android:textColor="#ff4040"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="发货"
                                android:textColor="#3c3d40"/>
                    </LinearLayout>

                    <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/margin_2"
                            android:background="#eeee"/>

                    <TextView
                            android:id="@+id/act_det_tv_good_info_style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableRight="@drawable/home_arrow_right"
                            android:padding="@dimen/margin_2"
                            android:text="请选择款式"
                            android:textColor="#3c3d40"/>

                    <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/margin_2"
                            android:background="#eeee"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/margin_2"
                            android:text="提示：普通商品享有质量问题7天退货，签收后3个工作日内可换货。其他特殊商品（如手办）的售后以页面说明为准"
                            android:textColor="#3c3d40"/>

                    <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/margin_2"
                            android:background="#eeee"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/margin_2"
                            android:text="图文详情"
                            android:textColor="#3c3d40"
                            android:textSize="@dimen/ts_3"/>

                    <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/margin_2"
                            android:background="#eeee"/>

                </LinearLayout>
            </ScrollView>
            <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <WebView
                        android:id="@+id/act_det_web_good_info_more"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></WebView>

            </ScrollView>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/act_det_ll_goods_root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#fff">

            <TextView
                    android:id="@+id/act_det_tv_good_info_callcenter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/margin_1"
                    android:drawableTop="@drawable/icon_callserver_unpressed"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="联系客服"
                    android:textColor="#393b3e"/>

            <TextView
                    android:id="@+id/act_det_tv_good_info_collection"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/margin_1"
                    android:drawableTop="@drawable/good_uncollected"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="收藏"
                    android:textColor="#393b3e"/>


            <TextView
                    android:id="@+id/act_det_tv_good_info_cart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/margin_1"
                    android:drawableTop="@drawable/icon_good_detail_cart"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="购物车"
                    android:textColor="#393b3e"/>

            <Button
                    android:id="@+id/act_det_btn_good_info_addcart"
                    android:layout_width="@dimen/height_120"
                    android:layout_height="@dimen/margin_10"
                    android:layout_gravity="center"
                    android:background="@drawable/add_cart_bg_selector"
                    android:gravity="center"
                    android:text="加入购物车"
                    android:textColor="#fff"/>
        </LinearLayout>

    </FrameLayout>

</LinearLayout>