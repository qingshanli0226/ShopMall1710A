<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".main.MainActivity">

    <com.example.shopmall.framework.view.ToolBar
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/toolBar"
            app:toolbarTile="@string/main_title_proper"
            app:toolBarLeftSrc="@mipmap/atguigu_logo"
            app:toolBarRightDisplay="true"
            app:toolBarRightSrc="@mipmap/ic_launcher"
            app:toolbarBackgroundColor="@color/colorAccent"
            app:isShowTitle="false"
            >

    </com.example.shopmall.framework.view.ToolBar>

    <EditText android:layout_width="300dp" android:layout_height="30dp"
    android:layout_alignParentTop="true"
    android:layout_marginLeft="100dp"
              android:hint="搜索"
              android:background="@android:color/white"
    android:layout_marginTop="10dp"/>

   <!-- <TextView
            android:layout_below="@+id/toolBar"
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
    android:visibility="gone"/>-->
    
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/frameLayout"
    android:layout_below="@id/toolBar"
    android:layout_above="@id/bottomBar">

    </FrameLayout>


    <ProgressBar android:layout_width="100dp" android:layout_height="100dp"
                 android:id="@+id/loadingBar"
                 android:layout_centerInParent="true"
                 android:visibility="gone"/>

    <com.example.shopmall.framework.view.BottomBar android:layout_width="match_parent"
                                                   android:layout_height="60dp"
                                                   android:layout_alignParentBottom="true"
    android:id="@+id/bottomBar">

    </com.example.shopmall.framework.view.BottomBar>



</RelativeLayout>