<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent">

    <com.example.shopmall.framework.view.ToorBar
            android:background="#FF0B0B"
            android:id="@+id/toor_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60">

    </com.example.shopmall.framework.view.ToorBar>
    <EditText
            android:layout_marginTop="@dimen/dp_15"
            android:id="@+id/edit_print"
            android:background="#fff"
            android:layout_marginLeft="@dimen/dp_5"
            android:hint="输入搜索信息"
            android:drawableLeft="@drawable/home_search_icon"
            android:layout_width="@dimen/dp_360"
            android:layout_height="@dimen/dp_30">

    </EditText>
    <ScrollView
            android:layout_below="@+id/toor_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:id="@+id/searchShow"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:id="@+id/showRecords"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:textSize="@dimen/sp_16"
                        android:paddingLeft="@dimen/sp_20"
                        android:gravity="center_vertical"
                        android:text="搜索历史"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_30"></TextView>
                <android.support.v7.widget.RecyclerView
                        android:id="@+id/recordShow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="600dp">
                <android.support.design.widget.TabLayout
                        android:id="@+id/tab"
                        android:layout_width="200dp"
                        android:layout_height="@dimen/dp_50"></android.support.design.widget.TabLayout>
                <android.support.v4.view.ViewPager
                        android:id="@+id/pager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></android.support.v4.view.ViewPager>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <android.support.v7.widget.RecyclerView
            android:visibility="gone"
            android:layout_below="@+id/toor_bar"
            android:id="@+id/searchResult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
    <ProgressBar android:layout_width="@dimen/progress_bar" android:layout_height="@dimen/progress_bar"
            android:id="@+id/progress_bar"
            android:layout_centerInParent="true"
            android:visibility="gone"/>
</RelativeLayout>