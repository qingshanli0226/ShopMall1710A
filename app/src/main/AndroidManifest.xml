<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.shopmall.shopmall1710a">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
            android:name=".ShopMallApplication"
            android:allowBackup="true"
            android:icon="@mipmap/atguigu_logo"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".main.MainActivity"
        android:launchMode="singleTask"/>

        <service android:name="com.example.shopmall.framework.service.ShopMallService"/>

        <activity android:name=".login.view.BetterLoginActivity"
        android:launchMode="singleTop"/>
        <activity android:name=".product.view.ProductDetailActivity"
        android:launchMode="singleTop"/>
    </application>

</manifest>