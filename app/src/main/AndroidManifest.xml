<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.example.shopmall.shopmall1710a">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.CAMERA"></uses-permission>
    <application
            android:name=".application.MyApplication"
            android:allowBackup="true"
            android:icon="@drawable/atguigu_logo"
            android:label="@string/app_name"
            android:roundIcon="@drawable/atguigu_logo"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <provider
                android:exported="false"
                android:grantUriPermissions="true"
                android:authorities="com.guofeng"
                android:name="android.support.v4.content.FileProvider">
            <!--meta-data fileprovider操作的文件的路径  name：名字 写死   resource：xml文件定义路径-->
            <meta-data
                    android:name="android.support.FILE_PROVIDER_PATHS"
                    android:resource="@xml/paths"></meta-data>
        </provider>
        <activity android:name=".search.view.SearchActivity" android:launchMode="singleTop"></activity>
        <activity android:name=".product.RecommendActivity" android:launchMode="singleTop"></activity>
        <activity android:name=".regist.RegistActivity" />
        <activity android:name=".login.view.LoginActivity"  android:launchMode="singleTop"/>
        <activity android:name=".view.MainActivity" android:launchMode="singleTask"/>
        <activity android:name=".view.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="com.example.shopmall.framework.service.ShopMoreService" />
    </application>

</manifest>