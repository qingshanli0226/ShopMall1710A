<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.example.shopmall.shopmall1710a">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
            android:name=".MyApplication"
            android:allowBackup="true"
            android:icon="@drawable/atguigu_logo"
            android:label="@string/app_name"
            android:roundIcon="@drawable/atguigu_logo"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".recommend.RecommendActivity" android:launchMode="singleTop"></activity>
        <activity android:name=".regist.RegistActivity" />
        <activity android:name=".login.view.LoginActivity"  android:launchMode="singleTop"/>
        <activity android:name=".MainActivity" android:launchMode="singleTask"/>
        <activity android:name=".WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="com.example.shopmall.framework.service.ShopMoreService" />
    </application>

</manifest>