<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
>

    <com.example.shopmall.framework.view.ToolBar android:layout_width="match_parent"
                                                 android:layout_height="60dp"
                                                 android:id="@+id/toolBar"
    android:layout_alignParentTop="true">

    </com.example.shopmall.framework.view.ToolBar>

    <com.example.shopmall.buy.shopcar.view.ShopcarPayView android:layout_width="match_parent"
                                                          android:layout_height="@dimen/tool_bar_height"
    android:id="@+id/shopcarPayView"
    android:layout_alignParentBottom="true">

    </com.example.shopmall.buy.shopcar.view.ShopcarPayView>

    <ProgressBar android:layout_width="100dp" android:layout_height="100dp"
                 android:id="@+id/loadingBar"
                 android:layout_centerInParent="true"
                 android:visibility="gone"/>

</RelativeLayout>