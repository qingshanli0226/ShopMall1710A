<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
                android:gravity="center">
    <ImageView
            android:id="@+id/title_bar_lift_iv"
            android:layout_width="30dp" android:layout_height="30dp"
    android:layout_margin="5dp" android:background="@mipmap/top_bar_left_back"/>
    <TextView
            android:id="@+id/title_bar_title_text"
            android:layout_width="0dp" android:layout_height="match_parent"
    android:layout_weight="1" android:gravity="center" android:text="xxx"
    android:textColor="#000" android:textSize="20sp"/>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">
        <ImageView
                android:id="@+id/title_bar_right_iv"
                android:layout_width="30dp" android:layout_height="30dp"
        android:background="@mipmap/icon_more"/>
        <TextView
                android:id="@+id/title_bar_right_text"
                android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="xxx"
        android:gravity="center"/>
    </LinearLayout>
</LinearLayout>